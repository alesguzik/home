#!/bin/sh
LOGFILE="$HOME/.log/clfswm.log"
while true; do
	echo '+++++++++++++++++++++++++++++++++++++START+++++++++++++++++++++++++++++++++++++' >> "$LOGFILE"
	date >> "$LOGFILE"
	clfswm >> "$LOGFILE" 2>&1
	echo '--------------------------------------END--------------------------------------' >> "$LOGFILE"
done


#!/bin/sh
while true; do
	echo '+++++++++++++++++++++++++++++++++++++START+++++++++++++++++++++++++++++++++++++' >> ~/clfswm-fail.log
	date >> ~/clfswm-fail.log
	clfswm >> ~/clfswm-fail.log 2>&1
	echo '--------------------------------------END--------------------------------------' >> ~/clfswm-fail.log
	play -q "$HOME/Dropbox/smb_pipe.wav"
done


#!/bin/sh
while true; do
	echo '+++++++++++++++++++++++++++++++++++++START+++++++++++++++++++++++++++++++++++++' >> ~/clfswm-err.log
	date >> ~/clfswm-fail.log
	clfswm >> ~/clfswm-fail.log 2>&1
	echo '--------------------------------------END--------------------------------------' >> ~/clfswm-err.log
done


#!/bin/bash
dev="Logitech USB Trackball"
we="Evdev Wheel Emulation"
mbe="Evdev Middle Button Emulation"

# Wheel
xinput set-prop "$dev" "$we" 1
xinput set-prop "$dev" "$we Button" 8
xinput set-prop "$dev" "$we Axes" 6 7 4 5
# xinput set-prop "$dev" "$we X Axis" 6 7
# xinput set-prop "$dev" "$we Y Axis" 4 5


# xinput set-prop "$dev" "Drag Lock Buttons" 8

# Middle button
xinput set-prop "$dev" "$mbe" 1

xmodmap -e 'pointer = 1 9 3 4 5 6 7 2 8 10'
